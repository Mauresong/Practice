'''
#1到100累计和
i = 1

sum = 0
while i <= 100:
    sum = sum + i
    i += 1
print("1到100求和为：%d"%sum)


#1到100偶数和

i = 0

sum = 0

while i <= 100:
    sum = sum + i
    i += 2
print("1到100的偶数和为%d"%sum)
'''

i = 1

sum = 0

while i<=100:
    if i%2 == 0:
        sum = sum + i
    i+=1
print("1~100的偶数和是%d"%sum)
